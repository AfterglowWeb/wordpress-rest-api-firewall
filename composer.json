{
  "name": "cmk/rest-api-firewall",
  "description": "A minimal WordPress theme designed exclusively for headless CMS usage.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
      {
        "name": "CÃ©dric Moris Kelly",
          "email": "cedric@moriskelly.com"
      }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=7.4",
    "league/commonmark": "^2.8"
  },
  "autoload": {
    "psr-4": {
      "cmk\\RestApiFirewall\\": "inc/"
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4.33"
    },
    "sort-packages": true
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "wp-coding-standards/wpcs": "^3.2"
  },
  "scripts": {
    "build": [
      "@composer --no-plugins --no-interaction install --no-scripts --no-dev"
    ],
    "lint": "phpcs inc/",
    "fix": "phpcbf --standard=Wordpress --extensions=php inc/"
  },
  "scripts-descriptions": {
    "build": "Build project artifact."
  }
  
}
